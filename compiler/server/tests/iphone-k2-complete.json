[
    {
        "op": "add",
        "path": "/tree/slots/default/-",
        "value": {
            "id": "hero-section",
            "type": "Box",
            "props": {
                "style": {
                    "position": "relative",
                    "height": "100dvh",
                    "minHeight": "100dvh",
                    "display": "flex",
                    "alignItems": "center",
                    "justifyContent": "center",
                    "overflow": "hidden"
                }
            },
            "slots": {
                "default": [
                    {
                        "id": "hero-ribbons",
                        "type": "Ribbons",
                        "props": {
                            "colors": [
                                "#667eea",
                                "#764ba2",
                                "#f093fb",
                                "#4facfe"
                            ],
                            "ribbonCount": 5,
                            "speed": "25s",
                            "opacity": 0.5,
                            "variant": "diagonal",
                            "style": {
                                "position": "absolute",
                                "top": "0",
                                "left": "0",
                                "width": "100%",
                                "height": "100%",
                                "zIndex": "0"
                            }
                        }
                    },
                    {
                        "id": "hero-veil",
                        "type": "DarkVeil",
                        "props": {
                            "opacity": 0.7,
                            "direction": "bottom",
                            "blur": true,
                            "style": {
                                "position": "absolute",
                                "top": "0",
                                "left": "0",
                                "width": "100%",
                                "height": "100%",
                                "zIndex": "1"
                            }
                        }
                    },
                    {
                        "id": "hero-content",
                        "type": "Box",
                        "props": {
                            "style": {
                                "position": "relative",
                                "zIndex": "10",
                                "textAlign": "center",
                                "maxWidth": "1200px",
                                "padding": "0 2rem"
                            }
                        },
                        "slots": {
                            "default": [
                                {
                                    "id": "hero-title",
                                    "type": "GradientText",
                                    "props": {
                                        "content": "Prof. Dr. [Full Name]",
                                        "as": "h1",
                                        "animated": true,
                                        "variant": "sunset",
                                        "style": {
                                            "fontSize": "72px",
                                            "fontWeight": "700",
                                            "marginBottom": "2rem"
                                        }
                                    }
                                },
                                {
                                    "id": "hero-subtitle",
                                    "type": "Text",
                                    "props": {
                                        "content": "Mechanical Engineering Professor | TUM | 24 Years of Research & Teaching",
                                        "as": "p",
                                        "style": {
                                            "fontSize": "24px",
                                            "color": "#d0d0d0",
                                            "maxWidth": "600px",
                                            "margin": "0 auto"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    },
