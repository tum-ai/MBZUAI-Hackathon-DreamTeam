{
  "componentName": "GradualBlur",
  "friendlyName": "GradualBlur",
  "description": "Gradual blur effect (Vue Bits component)",
  "requiresImport": true,
  "importPath": "vue-bits",
  "dependencies": ["mathjs"],
  "props": {
    "position": {
      "type": "string",
      "enum": ["top", "bottom", "left", "right"],
      "default": "bottom",
      "description": "Position where blur originates"
    },
    "strength": {
      "type": "number",
      "default": 10,
      "description": "Strength/intensity of the blur effect"
    },
    "height": {
      "type": "string",
      "default": "200px",
      "description": "Height of the blur area"
    },
    "divCount": {
      "type": "number",
      "default": 40,
      "description": "Number of divisions for smooth blur gradient"
    },
    "exponential": {
      "type": "boolean",
      "default": false,
      "description": "Use exponential curve for blur intensity"
    },
    "curve": {
      "type": "string",
      "enum": ["linear", "bezier", "ease-in"],
      "default": "linear",
      "description": "Curve type for blur gradient"
    },
    "opacity": {
      "type": "number",
      "default": 1,
      "description": "Opacity of the blur effect (0-1)"
    },
    "target": {
      "type": "string",
      "enum": ["parent", "page"],
      "default": "parent",
      "description": "Target element to apply blur to"
    },
    "animated": {
      "type": ["boolean", "string"],
      "default": false,
      "description": "Enable animation (true/false or 'scroll' for scroll-based)"
    }
  },
  "slots": ["default"],
  "events": []
}
