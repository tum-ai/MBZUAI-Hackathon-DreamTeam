{
  "componentName": "Plasma",
  "friendlyName": "Plasma",
  "description": "Animated plasma background effect (Vue Bits component)",
  "requiresImport": true,
  "importPath": "vue-bits",
  "dependencies": ["ogl"],
  "props": {
    "color": {
      "type": "string",
      "default": "#8b5cf6",
      "description": "Base color for plasma effect"
    },
    "speed": {
      "type": "number",
      "default": 1,
      "description": "Animation speed multiplier"
    },
    "direction": {
      "type": "number",
      "default": 0,
      "description": "Direction angle of plasma flow"
    },
    "scale": {
      "type": "number",
      "default": 1,
      "description": "Scale of the plasma effect"
    },
    "opacity": {
      "type": "number",
      "default": 0.5,
      "description": "Opacity of the effect (0-1)"
    },
    "mouseInteractive": {
      "type": "boolean",
      "default": false,
      "description": "Enable mouse interaction"
    }
  },
  "slots": [],
  "events": []
}
