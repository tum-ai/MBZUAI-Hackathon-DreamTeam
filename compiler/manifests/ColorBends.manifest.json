{
  "componentName": "ColorBends",
  "friendlyName": "ColorBends",
  "description": "Animated background with flowing color gradients (Vue Bits component)",
  "requiresImport": true,
  "importPath": "vue-bits",
  "dependencies": ["three"],
  "props": {
    "rotation": {
      "type": "number",
      "default": 0,
      "description": "Initial rotation angle of the effect"
    },
    "autoRotate": {
      "type": "boolean",
      "default": false,
      "description": "Enable automatic rotation"
    },
    "speed": {
      "type": "number",
      "default": 0.001,
      "description": "Animation speed"
    },
    "colors": {
      "type": "array",
      "items": {"type": "string"},
      "default": ["#667eea", "#764ba2", "#f093fb", "#4facfe"],
      "description": "Array of color hex codes for gradient"
    },
    "scale": {
      "type": "number",
      "default": 1,
      "description": "Scale of the effect"
    },
    "frequency": {
      "type": "number",
      "default": 0.5,
      "description": "Frequency of color waves"
    },
    "warpStrength": {
      "type": "number",
      "default": 2,
      "description": "Strength of warp distortion"
    },
    "mouseInfluence": {
      "type": "number",
      "default": 0.5,
      "description": "Mouse interaction influence (0-1)"
    },
    "parallax": {
      "type": "boolean",
      "default": false,
      "description": "Enable parallax effect"
    },
    "noise": {
      "type": "number",
      "default": 0,
      "description": "Amount of noise texture"
    }
  },
  "slots": [],
  "events": []
}
