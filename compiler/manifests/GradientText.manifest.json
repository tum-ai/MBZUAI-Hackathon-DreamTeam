{
  "componentName": "GradientText",
  "friendlyName": "GradientText",
  "description": "Text with animated gradient effect (Vue Bits component)",
  "requiresImport": true,
  "importPath": "vue-bits",
  "props": {
    "text": {
      "type": "string",
      "required": true,
      "description": "Text content to display with gradient"
    },
    "colors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": ["#ffaa40", "#9c40ff", "#ffaa40"],
      "description": "Array of color hex codes for the gradient"
    },
    "animationSpeed": {
      "type": "number",
      "default": 8,
      "description": "Speed of gradient animation in seconds (higher = slower)"
    },
    "showBorder": {
      "type": "boolean",
      "default": false,
      "description": "Show border around the text"
    },
    "className": {
      "type": "string",
      "description": "Custom CSS class for the component"
    }
  },
  "slots": [],
  "events": [],
  "variants": {
    "sunset": {
      "description": "Warm sunset gradient",
      "props": {
        "colors": ["#ff6b6b", "#feca57", "#ff6b6b"]
      }
    },
    "ocean": {
      "description": "Cool ocean gradient",
      "props": {
        "colors": ["#4ecdc4", "#556270", "#4ecdc4"]
      }
    },
    "neon": {
      "description": "Vibrant neon gradient",
      "props": {
        "colors": ["#f857a6", "#ff5858", "#f857a6"]
      }
    },
    "purple-haze": {
      "description": "Purple to pink gradient",
      "props": {
        "colors": ["#a18cd1", "#fbc2eb", "#a18cd1"]
      }
    }
  }
}
