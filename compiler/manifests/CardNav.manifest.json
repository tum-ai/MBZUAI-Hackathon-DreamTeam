{
  "componentName": "nav",
  "friendlyName": "CardNav",
  "description": "Navigation menu with card-style items and hover effects",
  "props": {
    "style": {
      "type": "object",
      "description": "Custom CSS styles"
    },
    "class": {
      "type": "string",
      "description": "CSS class name"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "items": {
      "type": "array",
      "description": "Navigation items [{label, icon, href}]"
    },
    "variant": {
      "type": "string",
      "enum": ["default", "vertical", "horizontal", "grid"],
      "default": "horizontal",
      "description": "Layout variant"
    },
    "gap": {
      "type": "string",
      "default": "1rem",
      "description": "Gap between items"
    },
    "cardStyle": {
      "type": "string",
      "enum": ["elevated", "flat", "outlined", "glass"],
      "default": "elevated",
      "description": "Style of navigation cards"
    }
  },
  "slots": ["default"],
  "events": ["click", "navigate"],
  "variants": {
    "default": {
      "description": "Horizontal card navigation",
      "props": {
        "style": {
          "display": "flex",
          "gap": "1rem",
          "flexDirection": "row"
        }
      }
    },
    "vertical": {
      "description": "Vertical stacked cards",
      "props": {
        "style": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "1rem"
        }
      }
    },
    "horizontal": {
      "description": "Horizontal scrolling cards",
      "props": {
        "style": {
          "display": "flex",
          "flexDirection": "row",
          "gap": "1rem",
          "overflowX": "auto"
        }
      }
    },
    "grid": {
      "description": "Grid layout of cards",
      "props": {
        "style": {
          "display": "grid",
          "gridTemplateColumns": "repeat(auto-fit, minmax(200px, 1fr))",
          "gap": "1rem"
        }
      }
    }
  }
}
