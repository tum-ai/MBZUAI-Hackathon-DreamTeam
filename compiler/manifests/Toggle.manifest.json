{
  "componentName": "Toggle",
  "friendlyName": "Toggle",
  "description": "Toggle switch component for boolean on/off states. Modern alternative to checkboxes for settings and feature flags. Animated transition between states.",
  "useCase": "Use for settings (dark mode, notifications), feature toggles, binary preferences, and any yes/no or on/off choice where the visual metaphor of a switch is appropriate.",
  "examples": [
    {
      "scenario": "Dark mode toggle",
      "code": {
        "type": "Box",
        "props": {
          "class": "flex items-center gap-3"
        },
        "children": [
          {
            "type": "Toggle",
            "props": {
              "id": "dark-mode-toggle",
              "modelValue": "$.darkMode",
              "variant": "default"
            }
          },
          {
            "type": "Text",
            "props": {
              "content": "Dark Mode",
              "as": "label",
              "class": "cursor-pointer"
            }
          }
        ]
      }
    },
